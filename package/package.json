{
  "name": "motion-solid",
  "version": "0.3.2",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/leanderriefel/motion-solid",
    "directory": "package"
  },
  "bugs": {
    "url": "https://github.com/leanderriefel/motion-solid/issues"
  },
  "homepage": "https://motion-solid.leanderriefel.com",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:browser": "playwright test -c tests/playwright/playwright.config.ts",
    "test:browser:ui": "playwright test -c tests/playwright/playwright.config.ts --ui",
    "test:browser:harness": "vite --config tests/playwright/harness/vite.config.ts"
  },
  "peerDependencies": {
    "solid-js": ">=1.0.0"
  },
  "dependencies": {
    "@solid-primitives/refs": "^1.1.2",
    "@solid-primitives/transition-group": "^1.1.2",
    "motion-dom": "^12.34.2",
    "motion-utils": "^12.29.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@solidjs/testing-library": "^0.8.10",
    "@testing-library/jest-dom": "^6.9.1",
    "esbuild-plugin-solid": "^0.6.0",
    "jsdom": "^28.1.0",
    "solid-js": "^1.9.11",
    "tsup": "^8.5.1",
    "tsup-preset-solid": "^2.2.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.0",
    "vite-plugin-solid": "^2.11.10",
    "vitest": "4.0.17"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "author": "Leander Riefel <riefel.leander@gmail.com>"
}
