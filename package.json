{
  "name": "motion-solid-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "package",
    "docs"
  ],
  "scripts": {
    "dev": "bun --filter @motion-solid/docs dev",
    "build": "bun --filter motion-solid build",
    "build:docs": "bun --filter @motion-solid/docs build",
    "start": "bun --filter @motion-solid/docs start",
    "test": "bun --filter motion-solid test",
    "test:browser": "bun --filter motion-solid test:browser",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown",
      "oxlint"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.48.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  },
  "author": "Leander Riefel <riefel.leander@gmail.com>"
}
